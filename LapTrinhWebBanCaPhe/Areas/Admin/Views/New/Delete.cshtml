@model LapTrinhWebBanCaPhe.Context.News

@{
    ViewBag.Title = "Delete";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>
        Nhà cung cấp
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Ảnh nhà cung cấp")
        </dt>

        <dd>
            <img src="~/Content/img/blog/@Model.NewsImage" width="100px" height="100px" />
        </dd>

        <dt>
            @Html.DisplayName("Số điện thoại")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsDate)
        </dd>

        <dt>
            @Html.DisplayName("Tên nhà cung cấp")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsTitle)
        </dd>

        <dt>
            @Html.DisplayName("Nguyên liệu cung cấp")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewsDescription)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "New", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "IndexNew")
        </div>
    }
</div>
